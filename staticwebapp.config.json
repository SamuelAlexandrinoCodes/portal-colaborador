{
  "routes": [
    {
      "route": "/.auth/login/aad",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/.auth/logout",
      "redirect": "/.auth/logout?post_logout_redirect_uri=/",
      "statusCode": 302
    },
    {
      "route": "/static/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/*.{js,css,png,jpg,jpeg,gif,svg,ico,json,map,txt}",
      "allowedRoles": [ "anonymous" ]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/static/*",
      "/*.{js,css,png,jpg,jpeg,gif,svg,ico,json,map,txt}",
      "/.auth/*",
      "/api/*"
    ]
  }
}
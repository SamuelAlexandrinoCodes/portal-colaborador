{
  "routes": [

    { "route": "/.auth/login/aad", "allowedRoles": [ "anonymous" ] },
    { "route": "/logout-success", "allowedRoles": [ "anonymous" ] },
    { "route": "/.auth/logout", "allowedRoles": [ "authenticated" ] },

    {
      "route": "/static/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/*.{js,css,png,jpg,jpeg,gif,svg,ico,json,map,txt}",
      "allowedRoles": [ "anonymous" ]
    },

    {
      "route": "/*",
      "allowedRoles": [ "authenticated" ]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },

  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/static/*",
      "/*.{js,css,png,jpg,jpeg,gif,svg,ico,json,map,txt}",
      "/.auth/*",
      "/api/*"
    ]
  }
}